<% layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details :</h3>
  </div>
</div>

<div class="row">
  <div class="card col-6 offset-2 show-card">
    <div style="width: 100%; height: 300px; overflow: hidden; border-radius: 8px;">
      <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b><br />
        <%= listing.description %><br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %><br />
      </p>
    </div>
  </div>
</div>

<br />
<div class="btns row mt-3">
  <!-- Button container -->
  <div class="col-8 offset-2 d-flex gap-3">
    <!-- Edit route -->
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
    <!-- Delete route -->
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>
